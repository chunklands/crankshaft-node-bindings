{
  "name": "crankshaft-node-binding",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "build": "concurrently npm:build:*",
    "build:ts": "tsc",
    "build:cxx": "cmake-js build --debug",
    "dev": "concurrently npm:dev:*",
    "predev": "npm link clangformatjs",
    "dev:ts": "tsc -w --preserveWatchOutput",
    "dev:cxx": "nodemon --exec \"npm run build:cxx\" -e h,c,hxx,cxx --watch deps/crankshaft/src --watch deps/crankshaft/include --watch src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "clangformatjs src/**/*{.cxx,.hxx}"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bindings": "^1.3.0",
    "@types/node": "^14.14.8",
    "cmake-js": "^6.1.0",
    "concurrently": "^5.3.0",
    "node-addon-api": "^3.0.2",
    "nodemon": "^2.0.6",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "clangformatjs": "file:../clangformatjs"
  }
}
