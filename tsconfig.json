{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "alwaysStrict": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": ["build", "node_modules", "**/*.spec.ts"]
}